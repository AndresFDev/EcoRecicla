<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcoRecicla" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

    </style>

    <style name="Theme.EcoRecicla" parent="Base.Theme.EcoRecicla">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
        <item name="colorOnBackground">@color/colorBackground</item>
        <item name="colorOutline">@color/colorPrimary</item>
        <item name="elevationOverlayColor">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.App.TitleMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.App.BodySmall</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="materialDividerStyle">@style/Widget.App.MaterialDivider</item>
    </style>

    <style name="SplashScreenTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppLogoTheme">
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppLogoIconTheme">
        <item name="tint">@color/colorPrimary</item>
    </style>

    <style name="CardCustomTheme">
        <item name="android:backgroundTint">@color/colorPrimaryContainer</item>
        <item name="android:background">@color/colorPrimaryContainer</item>
    </style>

    <style name="NavMenu">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="layout_behavior">
            com.google.android.material.behavior.HideBottomViewOnScrollBehavior
        </item>
        <item name="menu">@menu/nav_menu</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconGravity">top</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@font/product_sans_bold</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ButtonCardTipsStyle" parent="Widget.Material3.Button">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:translationY">4dp</item>
    </style>

    <style name="CardButtonBack" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorBackground</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ButtonBack" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="icon">@drawable/ic_back</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="iconSize">32dp</item>
        <item name="iconGravity">start</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="CardContainerImageTheme">
        <item name="cardBackgroundColor">@color/colorTransparent</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="ImageIconTheme">
        <item name="tint">@color/colorPrimary</item>
    </style>

    <style name="CardImageTheme">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="SecondaryCardTheme">
        <item name="android:backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="TextItalic">
        <item name="fontFamily">@font/product_sans_italic_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextBodyStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@font/product_sans_regular</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ShimmerStyle">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="CheckBoxTheme" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="buttonTint">@color/colorPrimary</item>
    </style>

    <style name="ButtonCategoriesStyle" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_columnWeight">1</item>
        <item name="layout_rowWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="cornerRadius">@dimen/cornerMedium</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="iconGravity">textTop</item>
        <item name="iconSize">60dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SwitchTheme" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurfaceVariant">@color/colorPrimaryContainer</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorOnSecondary</item>
        <item name="android:textColorHint">@color/colorOnSecondary</item>
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.App.TitleMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.App.BodySmall</item>
        <item name="editTextStyle">@style/Widget.Material3.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="TextAppearance.App.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/cornerXLarge</item>
    </style>

    <style name="CustomDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/colorPrimaryContainer</item>
        <item name="itemTextColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerXLarge</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerXLarge</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerXLarge</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerXLarge</item>
    </style>

    <style name="TitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

    <style name="TitleStatsStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextStatsStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BodyStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TitleCardTipsStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <style name="TextCardStatsStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="IconCard">
        <item name="tint">@color/colorOnPrimary</item>
    </style>

    <style name="TitleTableStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_weight">1</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <style name="ContentTableStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_weight">1</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">@color/colorPrimary</item>
        <item name="trackColor">@color/colorSecondary</item>
        <item name="trackCornerRadius">5dp</item>
        <item name="trackThickness">12dp</item>
    </style>

    <style name="CardViewStyle" parent="Base.Widget.Material3.CardView">
        <item name="cardCornerRadius">@dimen/cornerLarge</item>
        <item name="cardBackgroundColor">@color/colorPrimaryContainer</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSurface">@color/colorPrimaryContainer</item>
        <item name="colorOnSurface">@color/colorOnPrimary</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="backgroundTint">@color/colorPrimaryContainer</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="PermissionDialogStyle" parent="MaterialAlertDialog.App">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:textColorAlertDialogListItem">@android:color/black</item>
        <item name="android:buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBarButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

    <style name="DialogTransparent" parent="ThemeOverlay.App.MaterialAlertDialog">
        <item name="android:backgroundTint">@color/colorTransparent</item>
    </style>

    <style name="ToggleButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">16dp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/colorPrimaryContainer</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Widget.App.MaterialDivider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerColor">@color/colorPrimary</item>
    </style>

    <style name="TitleItemCategory" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextItemCategory" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>