<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcoRecicla" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

    </style>

    <style name="Theme.EcoRecicla" parent="Base.Theme.EcoRecicla">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
    </style>

    <style name="NavMenu">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconGravity">top</item>
        <item name="iconSize">24dp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="ButtonCategoriesStyle" parent="Widget.Material3.Button">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="cornerRadius">15dp</item>
        <item name="iconGravity">top</item>
        <item name="iconSize">55dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

</resources>