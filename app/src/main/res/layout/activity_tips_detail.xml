<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TipsDetailActivity">

    <include
        android:id="@+id/tvTitle"
        layout="@layout/app_logo_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTips"
        style="@style/TitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:text="@string/plastic"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTips">

        <ScrollView
            android:id="@+id/svTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTips">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvTip1"
                    style="@style/CardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/colorTransparent"
                                app:cardCornerRadius="0dp"
                                app:strokeWidth="0dp">

                                <ImageView
                                    android:id="@+id/ivTip1"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/img_plant" />

                            </com.google.android.material.card.MaterialCardView>

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/shimmerLayout1"
                                android:layout_width="match_parent"
                                android:layout_height="150dp">

                                <View
                                    style="@style/ShimmerStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </com.facebook.shimmer.ShimmerFrameLayout>

                        </FrameLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvTip1"
                                style="@style/TextCardStatsStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tvTitleTip1" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvBodyTip1"
                                style="@style/TextBodyStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:justificationMode="inter_word"
                                android:text="@string/tvBodyTip1" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvTip2"
                    style="@style/CardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/colorTransparent"
                                app:cardCornerRadius="0dp"
                                app:strokeWidth="0dp">

                                <ImageView
                                    android:id="@+id/ivTip2"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/img_plant" />

                            </com.google.android.material.card.MaterialCardView>

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/shimmerLayout2"
                                android:layout_width="match_parent"
                                android:layout_height="150dp">

                                <View
                                    style="@style/ShimmerStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </com.facebook.shimmer.ShimmerFrameLayout>

                        </FrameLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvTip2"
                                style="@style/TextCardStatsStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tvTitleTip1" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvBodyTip2"
                                style="@style/TextBodyStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:justificationMode="inter_word"
                                android:text="@string/tvBodyTip1" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvTip3"
                    style="@style/CardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/colorTransparent"
                                app:cardCornerRadius="0dp"
                                app:strokeWidth="0dp">

                                <ImageView
                                    android:id="@+id/ivTip3"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/img_plant" />

                            </com.google.android.material.card.MaterialCardView>

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/shimmerLayout3"
                                android:layout_width="match_parent"
                                android:layout_height="150dp">

                                <View
                                    style="@style/ShimmerStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </com.facebook.shimmer.ShimmerFrameLayout>

                        </FrameLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvTip3"
                                style="@style/TextCardStatsStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tvTitleTip1" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvBodyTip3"
                                style="@style/TextBodyStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:justificationMode="inter_word"
                                android:text="@string/tvBodyTip1" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        style="@style/CardButtonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/ButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>