<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CategoriesActivity">

    <include
        android:id="@+id/tvTitle"
        layout="@layout/app_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCategory"
        style="@style/TitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/categories" />

    <GridLayout
        android:id="@+id/glCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="16dp"
        android:layout_weight="7"
        android:columnCount="3"
        android:rowCount="3">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlastic"
            style="@style/ButtonCategoriesStyle"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/plastic"
            app:icon="@drawable/ic_plastic" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPaper"
            style="@style/ButtonCategoriesStyle"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/paper"
            app:icon="@drawable/ic_paper" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnElectronics"
            style="@style/ButtonCategoriesStyle"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/electronic"
            app:icon="@drawable/ic_electronic" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGlass"
            style="@style/ButtonCategoriesStyle"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/glass"
            app:icon="@drawable/ic_glass" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCard"
            style="@style/ButtonCategoriesStyle"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/cardboard"
            app:icon="@drawable/ic_card" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSteel"
            style="@style/ButtonCategoriesStyle"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/steel"
            app:icon="@drawable/ic_steel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTexiles"
            style="@style/ButtonCategoriesStyle"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/textiles"
            app:icon="@drawable/ic_textil" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBatteries"
            style="@style/ButtonCategoriesStyle"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/batteries"
            app:icon="@drawable/ic_batteries" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnArtHome"
            style="@style/ButtonCategoriesStyle"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/artHome"
            app:icon="@drawable/ic_art_home" />

    </GridLayout>

    <include
        android:id="@+id/menu"
        layout="@layout/nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>