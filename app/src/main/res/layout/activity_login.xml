<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="#DCEDC8"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context=".loginActivity">

    <!-- logo superior -->
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:contentDescription="@string/imag_logo"
        android:src="@drawable/img_logo"
        app:tint="@color/colorPrimary" />

    <!-- nombre de la app -->
    <TextView
        android:id="@+id/texapp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans_bold"
        android:gravity="center"
        android:text="@string/texapp_name"
        android:textColor="#284907"
        android:textSize="40dp" />
    <!-- Lema de la app -->
    <TextView
        android:id="@+id/texlema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texlema"
        android:gravity="center"
        android:textColor="@color/colorOnSecondary"
        android:textSize="20dp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="525dp"
        android:gravity="center"
        android:backgroundTint="#DCEDC8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="476dp"
            android:background="#9FC96C"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:padding="20dp">
            <!-- bienvenida -->
            <TextView
                android:id="@+id/tex_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tex_welcome"
                android:textAlignment="center"
                android:textColor="#284907"
                android:textSize="34dp" />

            <!-- campo de entrada para el correo electronico-->

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="10dp"
                android:text="@string/edtEmail"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="24sp" />
            <!-- Campo de entrada para la contraseña -->

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="@string/edt_Password"
                android:textSize="24sp" />

            <!-- Texto "¿Olvidaste tu contraseña?" -->
            <TextView
                android:id="@+id/txtForgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtForgotPassword"
                android:textSize="20sp" />

            <!-- Botón para iniciar sesión -->
            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="login"
                android:text="@string/loginButton"
                android:textSize="27sp" />

            <!-- Botón ¿No tienes una cuenta? para registrarse -->
            <Button
                android:id="@+id/no_accout_sign_upsign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="register"
                android:text="@string/no_accout_sign_up"
                android:textSize="13sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
